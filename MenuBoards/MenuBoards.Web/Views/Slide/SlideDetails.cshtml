@using MenuBoards.Web.ViewModels.SubTemplates
@model MenuBoards.Web.ViewModels.MenuSlide

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">

        @Html.HiddenFor(model => model.Id)
    </dl>
</div>

<div style="margin-bottom: 25px">
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">
                    Action Panel
                </div>
            </div>
            <div class="panel-body">
                <button type="button" id="showsettingsbtn" class="btn btn-info">Design Settings</button>
                <button type="button" id="showdisplaysettingsbtn" class="btn btn-info">Display Settings</button>
            </div>
        </div>
    </div>
</div>


<div class="menusSection">
    <div class="container">
        <div class="row"></div>
    </div>
</div>
<div>
    <button type="button" id="addMenuCol" class="btn btn-primary">Add menu column</button>
</div>

<script id="menuColTpl" type="text/template">
    <div style="margin-bottom: 25px" class="col-sm-4">
        <div class="panel-group">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a href="#" title="Delete" class="deleteMenuColX">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                        Menu Column
                    </div>
                </div>
                <div class="panel-body">

                </div>
            </div>
        </div>
    </div>
</script>

<script id="menuItemDisplayTpl" type="text/template">

    <div class="alert alert-info menuitem-display">
        <div><span>Label:</span> <span class="mi-label"></span></div>
        <div><span>Size: </span><span class="mi-size"></span></div>
        <div><span>Price: </span><span class="mi-price"></span></div>
        <div><span>Sub text:</span><span class="mi-subtext"></span></div>
        <button type="button" class="btn btn-primary editMenuItem">Edit</button>
        <button type="button" class="btn btn-success addImage">Add Image</button>
        <button type="button" class="btn btn-danger delMenuItem">Delete</button>
    </div>

</script>


<script id="menuTpl" type="text/template">

    <form class="menu-form">
        <input type="hidden" class="menuid" />

        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">Heading</span>
            <input type="text" class="menu-heading form-control" name="menu-heading" value="" placeholder="Heading">
            <span class="field-validation text-danger"></span>
        </div>

        <div class="listofmenuitems"></div>

        <div style="margin-bottom: 25px" class="input-group">
            <p>
                <button type="button" class="btn btn-default btn-sm toaddmenuitembtn">
                    <span class="glyphicon glyphicon-plus"></span> Add menu item
                </button>
            </p>
        </div>
        <div style="margin-top:10px" class="form-group">
            <a href="#" class="saveMenuBtn btn btn-success">Save Menu</a>
        </div>
    </form>
</script>

<div class="modal fade" id="addImageModal" tabindex="-1" role="dialog" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addImageModalLabel">Select Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>Loading...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="add btn btn-primary" disabled="disabled">Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addmenuitemModal" tabindex="-1" role="dialog" aria-labelledby="addmenuitemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addmenuitemModalLabel">Add menu item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" class="menuitem-id"/>

                    <div class="form-group">
                        <input class="menuitem-label form-control" type="text" placeholder="Menu Label" name="menuitem-price-input">
                    </div>
                    <div class="form-group">
                        <input class="menuitem-size form-control" type="text" placeholder="Size" name="menuitem-size-input">
                    </div>
                    <div class="form-group">
                        <input class="menuitem-price form-control" type="text" placeholder="Price" name="menuitem-label-input">
                    </div>
                    <div class="form-group">
                        <textarea class="menuitem-subtext form-control" type="text" placeholder="Subtext" name="menuitem-subtext-input"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="addmenuitem btn btn-primary">Add to Menu</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delMenuColWarnModal" tabindex="-1" role="dialog" aria-labelledby="delMenuColWarnModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h3 class="text-danger">Are you sure you want to delete this menu.</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="deletemenuCol btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.mb.slideId = '@Model.Id'
</script>

<script src="~/Scripts/menuBoards.menuSlide.js?@DateTime.Now.Ticks"></script>

@Html.Partial("MenuSlideDesignSettings")
@Html.Partial("DisplaySettings")


@Html.Partial("SettingsTemplates/SingleColumn")
@Html.Partial("SettingsTemplates/TwoColumn")
@Html.Partial("SettingsTemplates/ThreeColumn")