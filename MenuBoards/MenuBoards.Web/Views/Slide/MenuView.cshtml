@model IEnumerable<MenuBoards.Web.ViewModels.Menu>

<p>
    @Html.ActionLink("Create New Menu", "AddMenu", "Menu")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SlideId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainMenuHeading)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SlideId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainMenuHeading)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
