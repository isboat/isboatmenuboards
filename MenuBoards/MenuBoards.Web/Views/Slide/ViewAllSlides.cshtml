@model IEnumerable<MenuBoards.Web.ViewModels.Slide>

<p>
    @Html.ActionLink("Create Menu Slide", "CreateMenuSlide") |
    @Html.ActionLink("Create Video Slide", "CreateMenuSlide")
</p>

@if (Model.Any())
{

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Go live date and time
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoLiveDateTime)
                </td>
                <td>
                    <ul class="link-list">
                        <li>@Html.ActionLink("Details", "SlideDetails", new { id = item.Id })</li>
                        <li>@Html.ActionLink("Delete", "DeleteSlide", new { id = item.Id })</li>
                        <li>@Html.ActionLink("Preview", "PreviewMenuSlide", "Display", new { slideId = item.Id }, null)</li>
                    </ul>
                </td>
            </tr>
        }

    </table>
}
else
{
    <small>no slide available</small>
}